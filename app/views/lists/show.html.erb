<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, width: 400, crop: :fill %>')">
  <%= @list.name %>
</div>
<p>This list contains <%= @list.movies.size %> movies</p>
<div class="container">
  <div class="wrapper">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-movie">

        <img src="http://loremflickr.com/300/300/<%= bookmark.movie.title %>">
        <div class="card-trip-infos">
          <div>
            <h2><%= bookmark.movie.title %> </h2>
            <p><%= bookmark.movie.overview %></p>
          </div>
          <h2 class="card-trip-pricing">Raiting <%= bookmark.movie.rating %></h2>
        </div>
      </div>
    <% end %>
  </div>
<%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
<%= link_to "back", lists_path, class: "btn btn-primary m-5" %>
</div>
